.filter
    margin 0

    &__list
        display flex
        flex-wrap wrap
        margin 0 0 -10px 0
        padding 0
        list-style none

    &__item
        margin 0 10px 10px 0

    &__button
        box-sizing border-box
        padding 10px 30px
        font-family "Arial"
        font-size 24px
        line-height 30px
        font-weight 300
        color black
        border 1px solid black
        border-radius 25px
        outline none
        background none
        background-color white
        cursor pointer
        transition background-color .3s 0s ease, color .3s 0s ease
        @media (max-width: 1440px)
            font-size 20px
            line-height 26px
            border-radius 23px
        @media (max-width: 600px)
            padding 10px 25px
            font-size 18px
            line-height 24px
            border-radius 22px

        &:hover,
        &--active
            background-color black
            color white