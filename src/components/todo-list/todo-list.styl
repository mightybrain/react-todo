.todo-list
    box-sizing border-box
    width 55%
    margin 0 0 0 auto
    padding 80px 50px
    @media (max-width: 1440px)
        width 60%
        padding 60px 50px
    @media (max-width: 1440px)
        padding 60px 40px
    @media (max-width: 1024px)
        width 100%
    @media (max-width: 600px)
        padding 40px 15px

    &__list
        display flex
        flex-direction column
        align-items flex-start
        margin 0
        padding 0
        list-style none

    &__item
        width 100%
        border-bottom 1px solid black

.todo-list__item + .todo-list__item
    margin 40px 0 0 0