.header
    position: fixed
    top 0
    left 0
    display flex
    flex-direction column
    box-sizing border-box
    width 35%
    height 100%
    padding 80px 50px
    @media (max-width: 1440px)
        width 40%
        padding 60px 50px
    @media (max-width: 1440px)
        padding 60px 40px
    @media (max-width: 1024px)
        position static
        width 100%
    @media (max-width: 600px)
        padding 40px 15px

    &__title
        margin 0
        font-family "Arial"
        font-size 48px
        line-height 52px
        font-weight 300
        color black
        @media (max-width: 1440px)
            font-size 42px
            line-height 46px
        @media (max-width: 600px)
            font-size 36px
            line-height 40px

    &__hint
        margin 34px 0 0 0
        font-family "Arial"
        font-size 24px
        line-height 30px
        font-weight 300
        color black
        @media (max-width: 1440px)
            font-size 20px
            line-height 26px
        @media (max-width: 600px)
            margin 24px 0 0 0
            font-size 18px
            line-height 24px

    &__filter
        width 100%
        margin 73px 0 0 0
        @media (max-width: 600px)
            margin 53px 0 0 0

    &__search
        width 100%
        margin 50px 0 0 0

    &__add-item
        width 100%
        margin 50px 0 0 0
        @media (max-width: 600px)
            margin 40px 0 0 0